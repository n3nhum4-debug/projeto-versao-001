{
  auto_https disable_redirects
}

:80 {
  reverse_proxy localhost:3000 {
    header_uri Host {host}
    header_uri X-Forwarded-For {remote_host}
    header_uri X-Forwarded-Proto http
  }
}

:443 {
  reverse_proxy localhost:3000 {
    header_uri Host {host}
    header_uri X-Forwarded-For {remote_host}
    header_uri X-Forwarded-Proto https
  }
}
